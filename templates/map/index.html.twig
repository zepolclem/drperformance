{% extends 'base.html.twig' %}

{% block title %}Map index{% endblock %}

{% block body %}
    <h1>Map index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Power</th>
                <th>Torque</th>
                <th>Resume</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for map in maps %}
            <tr>
                <td>{{ map.id }}</td>
                <td>{{ map.power }}</td>
                <td>{{ map.torque }}</td>
                <td>{{ map.resume }}</td>
                <td>{{ map.price }}</td>
                <td>
                    <a href="{{ path('map_show', {'id': map.id}) }}">show</a>
                    <a href="{{ path('map_edit', {'id': map.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('map_new') }}">Create new</a>
{% endblock %}
