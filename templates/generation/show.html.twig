{% extends 'base.html.twig' %}

{% block title %}Generation{% endblock %}

{% block body %}
    <h1>Generation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ generation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ generation.name }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ generation.startDate ? generation.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ generation.endDate ? generation.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ generation.resume }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('generation_index') }}">back to list</a>

    <a href="{{ path('generation_edit', {'id': generation.id}) }}">edit</a>

    {{ include('generation/_delete_form.html.twig') }}
{% endblock %}
